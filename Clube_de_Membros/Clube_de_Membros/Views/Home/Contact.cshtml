@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>

<div id="formSection">
        <form method="post" id="contactForm">
            <div>@ViewBag.Message</div>
            <textarea data-bind="value:message, valueUpdate:'input'" name="message" id="message" maxlength="50"></textarea>
            <input type="submit" value="send" />
            <p><span data-bind="text:charactersRemaining"></span> characters remaining</p>
            <p><img src="~/Images/progress.gif" id="progress" style="display: none" /></p>
        </form>
    
</div>

