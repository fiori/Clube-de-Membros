@section scripts
{

    <script src="~/Scripts/knockout-3.5.0.js"></script>
    <script>
        function ContactViewModel() {
            var self = this;
            self.message = ko.observable('');
            self.charactersRemaining = ko.computed(function() {
                 return 50 - self.message().length;
            });
        }

        ko.applyBindings(new ContactViewModel());
    </script>

    <script>
        $('#contactForm').submit(function() {
            $('#progress').show();
            $.post('', { message: $('message').val() }).done(function(response) {
                setTimeout(function() { $('#formSection').html(response); }, 2000);
            });
            return false;
        });
    </script>

    @*<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>*@
}

